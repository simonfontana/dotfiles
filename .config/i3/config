# For calendar to work. Read docs
for_window [class="Yad"] floating enable

exec --no-startup-id redshift-gtk

for_window [instance="origin.exe"] floating enable
for_window [class="PanGPUI"] move position mouse

# Red mouse pointer (useful for Teams). https://askubuntu.com/questions/1220386/workarounds-for-mouse-pointer-visibility-in-screen-sharing-sessions
bindsym $mod+F12 exec /bin/bash -c "pkill find-cursor || find-cursor --repeat 0 --follow --distance 1 --line-width 16 --size 16 --color red"

# Set keyboard repeat delay and delay rate
exec_always --no-startup-id xset r rate 200 55

# Set screen brightness (laptop)
bindsym XF86MonBrightnessUp exec brightnessctl -d amdgpu_bl0 s +10%
bindsym XF86MonBrightnessDown exec brightnessctl -d amdgpu_bl0 s 10%-

# Start picom as compositor
exec --no-startup-id picom -b --backend glx --vsync --inactive-opacity 0.85
